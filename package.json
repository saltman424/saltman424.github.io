{
  "name": "saltman.github.io",
  "version": "0.0.0",
  "author": "Sander Altman",
  "private": true,
  "scripts": {
    "postinstall": "lefthook install",
    "ng": "ng",
    "start": "ng serve",
    "prebuild": "rm -rf docs",
    "build": "ng build",
    "postbuild": "mv docs/browser/* docs/ && rm -df docs/browser && touch docs/.nojekyll",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint"
  },
  "packageManager": "pnpm@10.20.0",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "20.3.9",
    "@angular/common": "20.3.9",
    "@angular/compiler": "20.3.9",
    "@angular/core": "20.3.9",
    "@angular/forms": "20.3.9",
    "@angular/platform-browser": "20.3.9",
    "@angular/router": "20.3.9",
    "rxjs": "7.8.0",
    "tslib": "2.3.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.5.0",
    "@angular/build": "20.3.8",
    "@angular/cli": "20.3.8",
    "@angular/compiler-cli": "20.3.9",
    "@eslint/css": "0.14.0",
    "@eslint/js": "9.38.0",
    "@eslint/json": "0.13.2",
    "@eslint/markdown": "7.5.0",
    "@types/jasmine": "5.1.0",
    "angular-eslint": "20.5.0",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "globals": "16.5.0",
    "jasmine-core": "5.9.0",
    "jiti": "2.6.1",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.0",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "lefthook": "2.0.2",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.1"
  }
}
