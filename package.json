{
  "name": "saltman.github.io",
  "version": "0.0.0",
  "author": "Sander Altman",
  "private": true,
  "scripts": {
    "postinstall": "lefthook install",
    "ng": "ng",
    "start": "ng serve",
    "prebuild": "rm -rf docs",
    "build": "ng build",
    "postbuild": "mv docs/browser/* docs/ && rm -df docs/browser && touch docs/.nojekyll",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "packageManager": "pnpm@10.20.0",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^20.3.9",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lefthook": "^2.0.2",
    "typescript": "~5.9.2"
  }
}